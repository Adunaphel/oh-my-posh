{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#6c71c4",
          "style": "plain",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "type": "os"
        },
        {
          "foreground": "#6c71c4",
          "style": "plain",
          "template": "{{ if .SSHSession }}\uf817 {{ end }}{{ if .Root }}<#d33682>{{ end }}{{ .UserName }}{{ if .Root }}</>{{ end }}@{{ .HostName }} ",
          "type": "session"
        },
        {
          "properties": {
            "folder_icon": "\uf6d7",
            "folder_separator_icon": "\uf460",
            "style": "full",
            "home_icon": "\uf7db"
          },
          "foreground": "#d33682",
          "style": "plain",
          "template": "\uf07b {{ .Path }} ",
          "type": "path"
        },
        {
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          //"style": "powerline",
          "foreground": "#b58900",
          "style": "plain",
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
          "type": "git"
        },/*
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "\ue0cc",
          "foreground": "#193549",
          "background": "#ffeb3b",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}\uF295 ",
          "properties": {
            "discharging_icon": "\ue231 ",
            "charging_icon": "\ue234 ",
            "charged_icon": "\ue22f "
          }
        },*/
        {
          "template": "{{ if eq .Name \"pwsh\" }}\uebc7{{ else }}\uf489{{ end }} {{ .Name }} {{ if eq .Name \"pwsh\" }}{{ .Version }} {{ end }}",
          "foreground": "#268bd2",
          "style": "plain",
          "type": "shell"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#2aa198",
          "style": "plain",
          "type": "az",
          "template": " \ufd03 "
        },
        {
          "foreground": "#2aa198",
          "style": "plain",
          "properties": {
            "source": "cli"
          },
          "template": "cli {{ .Name }} ",
          "type": "az"
        },
        {
          "foreground": "#2aa198",
          "style": "plain",
          "properties": {
            "source": "pwsh"
          },
          "template": "pwsh {{ .Name }} ",
          "type": "az"
        },
        {
          "foreground": "#2aa198",
          "style": "plain",
          "type": "az",
          "template": "\ufd03"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#cb4b16",
          "style": "plain",
          "template": " \uf1d0 >",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "#cb4b16",
    "template": "   > "
  },
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#cb4b16",
    "template": " {{ if eq .Shell \"pwsh\" }}\uebc7{{ else }}\uf489{{ end }} > "
  },
  "console_title_template": "{{ .Shell }} {{ .UserName }}@{{ .HostName }}:{{ .Folder }}",
  "final_space": true,
  "version": 2
}
